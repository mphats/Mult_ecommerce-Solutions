@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/js/bootstrap.bundle.js"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @if (Session["ID"] == null || Session["ID"] != null)
                            {
                                @Html.ActionLink("Home", "Index", "User", null, new { @class = "nav-link" })
                            }
                        </li>
                        <li class="nav-item">
                            @if (Session["ID"] == null)
                            {
                                @Html.ActionLink("Category", "AvailableCategorys", "User", null, new { @class = "nav-link" })
                            }
                        </li>
                        <li class="nav-item">
                            @if (Session["ID"] == null)
                            {
                                @Html.ActionLink("Post Ad", "CreateAds", "User", null, new { @class = "nav-link" })
                            }
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary me-2">
                                @if (Session["ID"] == null)
                                {
                                    @Html.ActionLink("Sign In", "Login", "User", null, new { @class = "nav-link" })
                                }
                            </button>
                        </li>

                        <li class="nav-item">
                            <button type="button" class="btn btn-primary">
                                @if (Session["ID"] == null)
                                {
                                    @Html.ActionLink("Register", "SignUp", "User", null, new { @class = "nav-link" })
                                }
                            </button>
                        </li>
                        <li class="nav-item">
                            @if (Session["ID"] == null)
                            {
                                @Html.ActionLink("Sign Out", "SignOut", "User", null, new { @class = "nav-link" })
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            @RenderBody()
        </div>

        <div class="row">
            <div class="col-12 text-center card-footer">
                <footer>
                    <p>&copy;@DateTime.Now.Year - TK COMMER

                </footer>
            </div>
        </div>
    </div>

</body>

</html>

