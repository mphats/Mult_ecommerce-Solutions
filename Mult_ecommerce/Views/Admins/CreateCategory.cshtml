@model Mult_ecommerce.Models.Category
@{
    ViewBag.Title = "Add Category";
    Layout = "~/Views/Shared/MakertingLayout.cshtml";
}

@using (Html.BeginForm("CreateCategory", "Admins", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4 mb-5"></div>
        <div class="col-md-4 mb-5">
            <span class="display-6 fw-bold text-danger text-center mb-5">Add Vehicle</span>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <span class="text-danger">@ViewBag.error</span>

            <div class="form-group">
                @Html.LabelFor(model => model.Cat_name)
                @Html.EditorFor(model => model.Cat_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Model type" } })
                @Html.ValidationMessageFor(model => model.Cat_name, "", new { @class = "text-danger" })
            </div>
                <div class="form-group">
                    <label for="imgfile">Images</label>
                    <input type="file" id="imgfile" name="imgfile" class="form-control" required="required" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
        </div>
    </div>

       
}


